<div class="admin-all-orders-container">  
  <div class="board-sidebar">
    <p>Tổng Đơn Hàng</p>
  </div>

  <div class="table">
    <table style="width:100%">
      <tr>
        <th>
          ID
        </th>
        <th>
          Mã Đơn Hàng
        </th>
        <th>
          Tên Khách Hàng
        </th>
        <th>
          Tổng Số Tiền
        </th>
        <th>
          Ngày Đặt Hàng
        </th>
        <th>
          Tình Trạng
        </th>
        <th>
        </th>
      </tr>
      {{#each order}}
      <tr>
        <td>
          {{addIndex @index 1}}
        </td>
        <td>
          {{this._id}}
        </td>
        <td>
          {{this.customerInfo.name}}
        </td>
        <td>
          {{this.totalProductPrice}}
        </td>
        <td>
          {{this.createdAt}}
        </td>
        <td>
          {{this.status}}
        </td>
        <td>
          <a href="/admin/all-orders/{{this._id}}">Chi Tiết</a>
        </td>
      </tr>
      {{/each}}
    </table>
  </div>

  <div class="total">
    <p class="total-title">Tổng Đơn Hàng</p>
    <p class="total-number">{{total}}</p>
  </div>
</div>

