<div class="famous-brand-board">
  <div class="title">
    <i class="fi fi-sr-flame"></i>
    <h1 style="font-size: 32px; margin-block-start: 0px; margin-block-end: 0px;">
      <a href="/all-products/all-brands" class="main-title">
        <b>THƯƠNG HIỆU NỔI BẬT</b>
      </a>
    </h1>
  </div>

  <div class="brands">
    <div class="inner">
      {{#each brands}}
      <div class="brand">
        <a href="/all-brands/brand/{{this._id}}">
          {{this.name}}
        </a>
      </div>
      {{/each}}
    </div>
    <div class="fade"></div>
  </div>
</div>

<script>
  var allProductOldPrices = document.querySelectorAll('p#product-old-price')
  var allProductPrices    = document.querySelectorAll('p#product-price')
  
  allProductOldPrices.forEach((price) => {price.innerText = price.innerText.replace(/\B(?=(\d{3})+(?!\d))/g, '.') + ' VND'})
  allProductPrices.forEach((price) => {price.innerText = price.innerText.replace(/\B(?=(\d{3})+(?!\d))/g, '.') + ' VND'})
</script>

