<div class="admin-all-customers-container">  
  <div class="board-title">
    <p>Tổng Khách Hàng: {{customerLength}}</p>
  </div>

  <div class="filter-and-create">
    <select class="filter">
      <option value="">Toàn bộ</option>
      <option value=""></option>
      <option value=""></option>
    </select>

    <a href="/admin/all-customers/customer/create" class="create-btn" id="create-btn">
      <i class="fi fi-rr-user-add"></i>
      <p>Thêm Khách Hàng</p>
    </a>
  </div>

  <div class="table">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width: 5% ;">STT           </td>
          <td style="width: 15%;">Mã Khách hàng </td>
          <td style="width: 15%;">Tên Khách Hàng</td>
          <td style="width: 25%;">Địa chỉ       </td>
          <td style="width: 10%;">Tổng Đơn hàng </td>
          <td style="width: 20%;">Tổng doanh thu</td>
          <td style="width: 10%;">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each customersWithOrders}}
        <tr>
          <td>{{addIndex @index 1}}</td>
          <td>{{this._id}}</td>
          <td>{{this.userInfo.name}}</td>
          <td>{{this.userInfo.address}}</td>
          <td>{{this.totalOrder}}</td>
          <td class="total-price">{{this.totalPrice}}</td>
          <td><a href="/admin/all-customers/customer/{{this._id}}"><button>Xem</button></a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script src="/js/admin/all/customer.js" defer></script>
