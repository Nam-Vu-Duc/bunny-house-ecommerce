<div class="employee-details-container">
  <form id="form-2" method="POST" action="/admin/all-employees/employee/updated/{{employeeInfo._id}}?_method=PUT">
    <table id="table-1">
      <thead>
        <tr><td colspan="2">THÔNG TIN NHÂN VIÊN</td></tr>
      </thead>
      <tr>
        <td>Mã Nhân Viên</td>
        <td>{{employeeInfo._id}}</td>
      </tr>
      <tr>
        <td>Tên Nhân Viên</td>
        <td><input type="text" id="name" name="name" value="{{employeeInfo.userInfo.name}}"></td>
      </tr>
      <tr>
        <td>Vị trí</td>
        <td>
          <select name="role" id="role">
            <option value="employee">Nhân viên</option>
            <option value="admin">Quản trị viên</option>
          </select>
        </td>
      </tr>
      <tr>
        <td>Email</td>
        <td><input type="text" id="email" name="email" value="{{employeeInfo.loginInfo.email}}"></td>
      </tr>
      <tr>
        <td>SĐT</td>
        <td><input type="text" id="phone" name="phone" value="{{employeeInfo.userInfo.phone}}"></td>
      </tr>
      <tr>
        <td>Địa Chỉ</td>
        <td><input type="text" id="address" name="address" value="{{employeeInfo.userInfo.address}}"></td>
      </tr>
      <tr>
        <td>Giới tính</td>
        <td>
          <input type="radio" name="gender" id="male" value="male">Nam
          <input type="radio" name="gender" id="female" value="female">Nữ
        </td>
      </tr>
      <tr>
        <td>Cửa hàng làm việc</td>
        <td>
          <select name="store" id="store">
            {{#each stores}}
              <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </td>
      </tr>
    </table>
    
    <div class="submit-button"><button title="submit" type="submit">Cập nhật</button></div>
  </form>
</div>

<script>
  var role    = '{{employeeInfo.loginInfo.role}}'
  var gender  = '{{employeeInfo.userInfo.gender}}'
  var storeId = '{{employeeInfo.userInfo.storeId}}'
  var successful = '{{successful}}'
  loadFile('/js/admin/detail/employee.js')
</script>