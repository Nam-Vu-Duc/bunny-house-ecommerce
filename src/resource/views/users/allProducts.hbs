<div class="user-all-products-container">
  <div class="title">
    <i class="fi fi-sr-flame"></i>
    <div class="main-title" style="text-transform:uppercase"><b>Toàn bộ sản phẩm nè</b></div>
  </div>

  <div class="all-category-skincare"></div>

  <div class="all-category-makeup"></div>

  <div class="filter">
    <select class="filter-btn">
      <option value="">Sắp xếp theo</option>
      <option value="asc">Giá tăng dần</option>
      <option value="desc">Giá giảm dần</option>
    </select>
  </div>

  <div class="all-products">
    {{#each products}}
    <a href="/all-products/product/{{this.slug}}">
      <div class="product">
        <img src="{{this.img.path}}" alt="{{this.name}}" id="product-1" loading="lazy">
        <del><p id="product-old-price">{{formatNumber this.oldPrice}}</p></del>
        <p id="product-price">{{formatNumber this.price}}</p>
        <p id="product-details">{{this.name}}</p>
        <p id="product-rate">
          {{this.rate}}/5
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
        </p>
      </div>
    </a>
    {{/each}}
  </div>

  <span class="pagination">
  </span>
</div>

<script defer>
  var getSlug       = `{{type}}`
  var currentPage   = `{{currentPage}}`
  var productLength = `{{productLength}}`
  var sortedColumn  = `{{sortedColumn}}`
  var sort          = `{{sort}}`
</script>
<script src="/js/importLinkCss.js" defer></script>
<script src="/js/user/allProducts.js" defer></script>