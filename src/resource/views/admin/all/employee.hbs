<div class="admin-all-employees-container">  
  <div class="board-title">
    <p>Nhân sự: {{totalEmployee}}</p>
  </div>

  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label for="price">Sắp xếp theo:</label>
        <select id="price" class="filter-btn">
          <option value="">Mức lương</option>
          <option value="1">Mức lương tăng dần</option>
          <option value="-1">Mức lương giảm dần</option>
        </select>

        <select id="rate" class="filter-btn">
          <option value="">Thâm niên</option>
          <option value="1">Thâm niên tăng dần</option>
          <option value="-1">Thâm niên giảm dần</option>
        </select>
      </div>

      <div class="filter">
        <label>Lọc theo:</label>
        <select id="position" class="filter-btn">
          <option value="">Vị trí</option>
          {{#each positions}}
          <option value="{{this.code}}">{{this.name}}</option>
          {{/each}}
        </select>

        <select id="store" class="filter-btn">
          <option value="">Cửa hàng</option>
          {{#each stores}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>

      <a href="/admin/all-employees/employee/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Nhân Sự</p>
      </a>
    </div>
    <input type="text" id="search-input" placeholder="Tìm kiếm nhân sự">
  </div>

  <div class="table">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT          </td>
          <td style="width: 15%">Mã nhân viên </td>
          <td style="width: 20%">Tên nhân viên</td>
          <td style="width: 10%">Email        </td>
          <td style="width: 30%">Địa chỉ      </td>
          <td style="width: 10%">Chức vụ      </td>
          <td style="width: 10%">Chi tiết     </td>
        </tr>
      </thead>

      <tbody>
        {{#each employees}}
          <tr>
            <td>{{addIndex @index 1}}</td>
            <td>{{this._id}}</td>
            <td>{{this.userInfo.name}}</td>
            <td>{{this.loginInfo.email}}</td>
            <td>{{this.userInfo.address}}</td>
            <td>{{formatRole this.loginInfo.role}}</td>
            <td><a href="/admin/all-employees/employee/{{this._id}}">Xem</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script>
  const successful = '{{successful}}'
  const totalEmployee = '{{totalEmployee}}'
  const currentPage = '{{currentPage}}'
  loadFile('/js/admin/all/employee.js')
</script>