<div class="admin-all-employees-container">  
  <div class="board-title">
    <p>Tổng nhân sự: {{totalEmployee}}</p>
  </div>

  <div class="filter-and-create">
    <select class="filter">
      <option value="">Toàn bộ</option>
      <option value="skincare">Skincare</option>
      <option value="makeup">Makeup</option>
    </select>

    <a href="/admin/all-employees/employee/create" class="create-btn" id="create-btn">
      <i class="fi fi-br-layer-plus"></i>
      <p>Thêm nhân viên</p>
    </a>
  </div>

  <div class="table">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT          </td>
          <td style="width: 15%">Mã nhân viên </td>
          <td style="width: 20%">Tên nhân viên</td>
          <td style="width: 10%">Email        </td>
          <td style="width: 30%">Địa chỉ      </td>
          <td style="width: 10%">Chức vụ      </td>
          <td style="width: 10%">Chi tiết     </td>
        </tr>
      </thead>

      <tbody>
        {{#each employees}}
          <tr>
            <td>{{addIndex @index 1}}</td>
            <td>{{this._id}}</td>
            <td>{{this.userInfo.name}}</td>
            <td>{{this.loginInfo.email}}</td>
            <td>{{this.userInfo.address}}</td>
            <td>{{this.loginInfo.role}}</td>
            <td><a href="/admin/all-employees/employee/{{this._id}}">Xem</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script src="/js/admin/all/employee.js" defer></script>