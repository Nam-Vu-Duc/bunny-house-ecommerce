<div class="admin-all-suppliers-container">  
  <div class="board-title">
    <p>Tổng Đối Tác: {{totalSupplier}}</p>
  </div>

  <div class="filter-and-create">
    <select class="filter">
      <option value="">Toàn bộ</option>
      <option value=""></option>
      <option value=""></option>
    </select>

    <a href="/admin/all-suppliers/supplier/create" class="create-btn" id="create-btn">
      <i class="fi fi-rr-user-add"></i>
      <p>Thêm Đối tác</p>
    </a>
  </div>

  <div class="table">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 15%">Mã Đối Tác    </td>
          <td style="width: 20%">Tên Đối Tác   </td>
          <td style="width: 20%">Địa chỉ       </td>
          <td style="width: 10%">Tổng đơn nhập </td>
          <td style="width: 20%">Tổng Chi phí  </td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each suppliers}}
          <tr>
            <td>{{addIndex @index 1}}</td>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.quantity}}</td>
            <td>{{formatNumber this.totalCost}}</td>
            <td><a href="/admin/all-suppliers/supplier/{{this._id}}">Xem</a></td>
          </tr>
          {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script>
  const successful = '{{successful}}'
  const totalSupplier = '{{totalSupplier}}'
  const currentPage = '{{currentPage}}'
  loadFile('/js/admin/all/supplier.js')
</script>