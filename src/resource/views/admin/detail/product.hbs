<div class="product-details-container">
  <form id="form-2" method="POST" action="/admin/all-products/product/updated/{{productInfo._id}}?_method=PUT">
    <table id="table-1">
      <thead>
        <tr><td colspan="2">THÔNG TIN SẢN PHẨM</td></tr>
      </thead>
      <tr>
        <td>Loại Sản Phẩm</td>
        <td>
          <select name="categories" id="categories">
            <option value="skincare">Skincare</option>
            <option value="makeup">Makeup</option>
          </select>
          <select name="skincare" id="skincare" style="display: none">
            <option value="xit-khoang">Xịt Khoáng</option>
            <option value="mat-na">Mặt Nạ</option>
            <option value="serum">Serum</option>
            <option value="bha">BHA</option>
            <option value="tay-da-chet">Tẩy Da Chết</option>
            <option value="duong-da">Dưỡng Da</option>  
            <option value="toner">Toner</option>
            <option value="nuoc-tay-trang">Nước Tẩy Trang</option>
            <option value="cham-mun">Chấm Mụn</option>
            <option value="kem-duong-am">Kem Dưỡng Ẩm</option>
            <option value="sua-rua-mat">Sữa Rửa Mặt</option>
          </select>
          <select name="makeup" id="makeup" style="display: none">
            <option value="phan-ma">Phấn Má</option>
            <option value="mascara">Mascara</option>
            <option value="ke-mat">Kẻ Mắt</option>
            <option value="kem-chong-nang">Kem Chống Nắng</option>
            <option value="che-khuyet-diem">Che Khuyết Điểm</option>
            <option value="son">Son</option>
          </select>
        </td>
      </tr>
      <tr>
        <td>Hãng</td>
        <td>
          <select name="brand" id="brand">
            {{#each brands}}
            <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
          </select>
        </td>
      </tr>
      <tr>
        <td>Tên</td>
        <td><input type="text" id="name" name="name" value="{{productInfo.name}}"></td>
      </tr>
      <tr>
        <td>Giá nhập</td>
        <td><input type="text" id="purchasePrice" name="purchasePrice" value="{{formatNumber productInfo.purchasePrice}}"></td>
      </tr>
      <tr>
        <td>Giá bán cũ</td>
        <td><input type="text" id="oldPrice" name="oldPrice" value="{{formatNumber productInfo.oldPrice}}"></td>
      </tr>
      <tr>
        <td>Giá bán mới</td>
        <td><input type="text" id="price" name="price" value="{{formatNumber productInfo.price}}"></td>
      </tr>
      <tr>
        <td>Mô tả</td>
        <td><input type="text" id="description" name="description" value="{{productInfo.description}}"></td>
      </tr>
      <tr>
        <td>Chi tiết</td>
        <td><input type="text" id="details" name="details" value="{{productInfo.details}}"></td>
      </tr>
      <tr>
        <td>Số lượng</td>
        <td><input type="text" id="quantity" name="quantity" value="{{productInfo.quantity}}"></td>
      </tr>
      <tr>
        <td>Đánh giá</td>
        <td><input type="text" id="rate" name="rate" value="{{productInfo.rate}}/5" disabled></td>
      </tr>
      <tr>
        <td>Lượt bán</td>
        <td><input type="text" id="saleNumber" name="saleNumber" value="{{productInfo.saleNumber}}" disabled></td>
      </tr>
      <tr>
        <td>Lượt đánh giá</td>
        <td><input type="text" id="rateNumber" name="rateNumber" value="{{productInfo.rateNumber}}" disabled></td>
      </tr>
      <tr>
        <td>Tình trạng sản phẩm</td>
        <td>
          <select name="status" id="status">
            {{#each productStatuses}}
            <option value="{{this.code}}">{{this.name}}</option>
            {{/each}}
          </select>
        </td>
      </tr>
    </table>
    
    <div class="submit-button"><button title="submit" type="submit">Cập nhật</button></div> 
  </form>
</div>

<script>
  var productCategories  = '{{productInfo.categories}}'
  var productStatus      = '{{productInfo.status}}'
  var productBrand       = '{{productInfo.brand}}'
  var productSkincare    = '{{productInfo.skincare}}'
  var productMakeup      = '{{productInfo.makeup}}'
  var successful         = '{{successful}}'
  loadFile('/js/admin/detail/product.js')
</script>