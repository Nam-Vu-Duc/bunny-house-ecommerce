          <tr>
            <td>Bảng lương</td>
            <td></td>
            <td><a href="/admin/all-orders/?page=1&type=preparing">Chi tiết</a></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  var greetingLine = document.querySelector('div.board-title').querySelector('p')
  var date = new Date()
  var dateNow = date.getDate() + '/' + (date.getMonth()+1) + '/' + date.getFullYear()
  greetingLine.innerText = `Thống kê ngày ${dateNow}`

</script>