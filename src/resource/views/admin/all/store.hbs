<div class="admin-all-stores-container">  
  <div class="board-title">
    <p>Tổng cửa hàng: {{totalStore}}</p>
  </div>

  <div class="filter-and-create">
    <div class="sort">
      <label for="price">Sắp xếp theo:</label>
      <select id="price" class="filter-btn">
        <option value="">Giá mặc định</option>
        <option value="1">Giá tăng dần</option>
        <option value="-1">Giá giảm dần</option>
      </select>

      <select id="rate" class="filter-btn">
        <option value="">Đánh giá mặc định</option>
        <option value="1">Đánh giá tăng dần</option>
        <option value="-1">Đánh giá giảm dần</option>
      </select>

      <select id="saleNumber" class="filter-btn">
        <option value="">Lượng bán mặc định</option>
        <option value="1">Lượng bán tăng dần</option>
        <option value="-1">Lượng bán giảm dần</option>
      </select>

      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>
    </div>

    <a href="/admin/all-stores/store/create" class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <p>Thêm Cửa Hàng</p>
    </a>
  </div>

  <div class="table">
    <input type="text" id="search-input" placeholder="Tìm kiếm khách hàng">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 15%">Mã cửa hàng   </td>
          <td style="width: 20%">Tên cửa hàng  </td>
          <td style="width: 25%">Địa chỉ       </td>
          <td style="width: 25%">Tổng doanh thu</td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each stores}}
        <tr>
          <td>{{addIndex @index 1}}</td>
          <td>{{this._id}}</td>
          <td>{{this.name}}</td>
          <td>{{this.address}}</td>
          <td>{{formatNumber this.revenue}}</td>
          <td><a href="/admin/all-stores/store/{{this._id}}">Xem</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script>
  const successful = '{{successful}}'
  const totalStore = '{{totalStore}}'
  const currentPage = '{{currentPage}}'
  loadFile('/js/admin/all/store.js')
</script>