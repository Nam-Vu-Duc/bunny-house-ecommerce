<div class="store-details-container">
  <form id="form-2" method="POST" action="/admin/all-stores/store/updated/{{storeInfo._id}}?_method=PUT">
    <table id="table-1">
      <thead>
        <tr><td colspan="2">THÔNG TIN CỬA HÀNG</td></tr>
      </thead>
      <tr>
        <td>Mã Cửa hàng</td>
        <td>{{storeInfo._id}}</td>
      </tr>
      <tr>
        <td>Tên cửa hàng</td>
        <td><input type="text" id="name" name="name" value="{{storeInfo.name}}"></td>
      </tr>
      <tr>
        <td>Địa chỉ cửa hàng</td>
        <td><input type="text" id="address" name="address" value="{{storeInfo.address}}"></td>
      </tr>
      <tr>
        <td>Mô tả chi tiết</td>
        <td><input type="text" id="details" name="details" value="{{storeInfo.details}}"></td>
      </tr>
      <tr>
        <td>Doanh thu cửa hàng</td>
        <td>{{formatNumber storeInfo.revenue}}</td>
      </tr>
    </table>

    <table id="table-2">
      <thead>
        <tr><td colspan="4">DANH SÁCH NHÂN VIÊN</td></tr>
      </thead>
      <thead>
        <tr>
          <td>Mã nhân viên   </td>
          <td>Tên nhân viên  </td>
          <td>Vị trí làm việc</td>
          <td>Chi tiết       </td>
        </tr>
      </thead>
      <tbody>
        {{#each employeesInfo}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.userInfo.name}}</td>
          <td>{{formatRole this.loginInfo.role}}</td>
          <td><a href="/admin/all-employees/employee/{{this._id}}">Xem</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <div class="submit-button"><button title="submit" type="submit">Cập nhật</button></div>
  </form>
</div>

<script>
  var successful = '{{successful}}'
</script>
<script src="/js/admin/detail/store.js" defer></script>