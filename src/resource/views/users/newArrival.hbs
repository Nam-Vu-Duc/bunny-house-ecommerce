<div class="new-arrival-container">
  <div class="title">
    <i class="fi fi-sr-flame"></i>
    <div class="main-title" style="text-transform: uppercase"><b>Hàng mới về</b></div>
  </div>

  <div class="sort-button">
    Sắp xếp
    {{{sortable 'name' _sort}}}
  </div>
  
  <div class="all-products">
    {{#each product}}
      <div class="product">
        <a href="{{this.img}}">
          <img src="../uploads/{{this.avatar}}" alt="">
          <p id="product-price">{{this.price}}đ</p>
          <p id="product-details">{{this.name}}</p>
        </a>
        
        <span class="product-button">
          <div>
            <i class="fi fi-rr-shopping-cart-add"></i> 
          </div>
          <div>
            <i class="fi fi-rr-heart"></i>
          </div> 
        </span> 
      </div>
    {{/each}}
  </div>

  <span class="see-more-button">
    <button>Xem thêm</button>
  </span>
</div>