<div class="admin-all-purchases-container">  
  <div class="board-title">
    <p>Đơn nhập: {{totalPurchase}}</p>
  </div>

  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label>Sắp xếp theo:</label>
        <select id="purchaseDate" class="filter-btn">
          <option value="">Ngày đặt hàng</option>
          <option value="1">Ngày tăng dần</option>
          <option value="-1">Ngày giảm dần</option>
        </select>

        <select id="totalPurchasePrice" class="filter-btn">
          <option value="">Giá trị đơn mặc định</option>
          <option value="1">Giá trị tăng dần</option>
          <option value="-1">Giá trị giảm dần</option>
        </select>
      </div>

      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>

      <a href="/admin/all-purchases/purchase/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Đơn Nhập</p>
      </a>
    </div>
    <input type="text" id="search-input" placeholder="Tìm kiếm đơn nhập">
  </div>

  <div class="table">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT          </td>
          <td style="width: 20%">Mã đơn nhập  </td>
          <td style="width: 25%">Ngày nhập    </td>
          <td style="width: 15%">Tổng sản phẩm</td>
          <td style="width: 25%">Tổng chi phí </td>
          <td style="width: 10%">Chi tiết     </td>
          </td>
        </tr>
      </thead>

      <tbody>
        {{#each purchases}}
        <tr>
          <td>{{addIndex @index 1}}</td>
          <td>{{this._id}}</td>
          <td>{{formatDate this.purchaseDate}}</td>
          <td>{{this.totalProducts}}</td>
          <td>{{formatNumber this.totalPurchasePrice}}</td>
          <td><a href="/admin/all-purchases/purchase/{{this._id}}">Xem</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination">
  </span>
</div>

<script>
  const successful = '{{successful}}'
  const totalPurchase = '{{totalPurchase}}'
  const currentPage = '{{currentPage}}'
  loadFile('/js/admin/all/purchase.js')
</script>