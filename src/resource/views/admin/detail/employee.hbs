<div class="employee-details-container">
  <form id="form-2" method="POST" action="/admin/all-employees/employee/updated/{{employeeInfo._id}}?_method=PUT">
    <table id="table-1">
      <thead>
        <tr><td colspan="2">THÔNG TIN NHÂN VIÊN</td></tr>
      </thead>
      <tr>
        <td>Mã Nhân Viên</td>
        <td>{{employeeInfo._id}}</td>
      </tr>
      <tr>
        <td>Tên Nhân Viên</td>
        <td><input type="text" id="name" name="name" value="{{employeeInfo.name}}"></td>
      </tr>
      <tr>
        <td>Vị trí</td>
        <td>
          <select name="role" id="role">
            {{#each positions}}
            <option value="{{this.code}}">{{this.name}}</option>
            {{/each}}
          </select>
        </td>
      </tr>
      <tr>
        <td>Email</td>
        <td><input type="text" id="email" name="email" value="{{employeeInfo.email}}"></td>
      </tr>
      <tr>
        <td>SĐT</td>
        <td><input type="text" id="phone" name="phone" value="{{employeeInfo.phone}}"></td>
      </tr>
      <tr>
        <td>Địa Chỉ</td>
        <td><input type="text" id="address" name="address" value="{{employeeInfo.address}}"></td>
      </tr>
      <tr>
        <td>Giới tính</td>
        <td>
          <input type="radio" name="gender" id="male" value="male">Nam
          <input type="radio" name="gender" id="female" value="female">Nữ
        </td>
      </tr>
      <tr>
        <td>Cửa hàng làm việc</td>
        <td>
          <select name="store" id="store">
            {{#each stores}}
              <option value="{{this.code}}">{{this.name}}</option>
            {{/each}}
          </select>
        </td>
      </tr>
      <tr>
        <td>Ngày vào làm</td>
        <td>{{formatDate employeeInfo.createdAt }}</td>
      </tr>
    </table>
    
    <div class="submit-button"><button title="submit" type="submit">Cập nhật</button></div>
  </form>
</div>

<script src="/js/admin/detail/employee.js"></script>