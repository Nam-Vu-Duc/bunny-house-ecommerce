<div class="user-all-products-container">
  <div class="title">
    <i class="fi fi-sr-flame"></i>
    <div class="main-title"><b>Toàn bộ sản phẩm nè</b></div>
  </div>

  <div class="all-category-skincare"></div>
  <div class="all-category-makeup"></div>

  <div class="filter">
    <div>
      <label for="price">Giá bán</label>
      <select id="price" class="filter-btn">
        <option value="">Sắp xếp theo</option>
        <option value="asc">Tăng dần</option>
        <option value="desc">Giảm dần</option>
      </select>
    </div>

    <div>
      <label for="rate">Đánh giá</label>
      <select id="rate" class="filter-btn">
        <option value="">Sắp xếp theo</option>
        <option value="asc">Tăng dần</option>
        <option value="desc">Giảm dần</option>
      </select>
    </div>
    
    <div>
      <label for="saleNumber">Lượng bán</label>
      <select id="saleNumber" class="filter-btn">
        <option value="">Sắp xếp theo</option>
        <option value="asc">Tăng dần</option>
        <option value="desc">Giảm dần</option>
      </select>
    </div>

    <div>
      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>
    </div>
  </div>

  <div class="products">
    {{#each products}}
      {{> product}}
    {{/each}}
  </div>

  <span class="pagination"></span>
</div>

<script>
  var getSlug       = `{{type}}`
  var currentPage   = `{{currentPage}}`
  var productLength = `{{productLength}}`
  loadFile('/js/user/allProducts.js')
</script>
<script src="/js/user/product.js"></script>