<div class="detail-product-container">
  <div class="table">
    <div class="image-box">
      <div class="image">
        <img src="{{newProduct.img.path}}" alt="{{newProduct.name}}" loading="lazy"/>
      </div>
    </div>
    
    <div class="details-box">
      <div class="title">
        <h4 id="product-rate">
          {{newProduct.rate}}/5
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
        </h4>
        <h3>{{newProduct.brand}}</h3>
        <h1>{{newProduct.name}}</h1>
        <del><h4 id="product-old-price">{{newProduct.oldPrice}}</h4></del>
        <h3 id="product-price">{{newProduct.price}}</h3>
        <h4 id="product-quantity">Số lượng: {{newProduct.quantity}}</h4>
      </div>
      
      <div class="description">
        <p>{{newProduct.description}}</p>
      </div>

      <div class="quantity">
        <i class="fi fi-rr-minus-circle"></i>
        <p></p>
        <i class="fi fi-rr-add"></i>
      </div>

      <div class="button">
        <div class="add-to-cart"><p>Thêm Vào Giỏ</p></div>
        <div class="buy-now"><a href="/all-orders"><p>Mua Ngay</p></a></div>
        <div class="out-of-order"><p>Hết Hàng</p></div>
      </div>
    </div>
  </div>

  <div class="more-details">
    <h3>THÔNG TIN SẢN PHẨM</h3>
    <p>{{newProduct.details}}</p>
  </div>
  
  <div class="more-details">
    <h3>HƯỚNG DẪN SỬ DỤNG</h3>
    <p>{{newProduct.guide}}</p>
  </div>

  <div class="more-details">
    <h3>Đánh giá</h3>
    <div class="comment-list">
      {{#each comments}}
        <div class="comment">
          <p>user{{this.senderId}}</p>
          <p>{{formatDate this.createdAt}}</p>
          <p>{{this.content}}</p>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="related-products">
    <div class="title">
      <a href="/all-products/{{newProduct.categories}}/{{newProductType}}" class="main-title"><b>SẢN PHẨM TƯƠNG ỨNG</b></a>
    </div>

    <div class="products">
      {{#each relatedProducts}}
      <a href="/all-products/product/{{this.slug}}">
        <div class="product">
          <img src="{{this.img.path}}" alt="{{this.name}}" id="product-1" loading="lazy">
          <del><h4 id="product-old-price">{{this.oldPrice}}</h4></del>
          <h3 id="product-price">{{this.price}}</h3>
          <p id="product-details">{{this.name}}</p>
        </div>
      </a>
      {{/each}}
    </div>
  </div>
</div>

<script defer>
  var productDetails  = `{{newProduct.details}}`
  var productStatus   = `{{newProduct.status}}`
  var productSlug     = `{{newProduct.slug}}`
  var productName     = `{{newProduct.name}}`
  var productPrice    = `{{newProduct.price}}`
  var productImage    = `{{newProduct.img.path}}`
</script>
<script src="/js/user/detailProduct.js" defer></script>