<div class="admin-all-suppliers-container">  
  <div class="board-title">
    <p>Đối Tác: {{totalSupplier}}</p>
  </div>

  <div class="control-bar">
    <div class="filter-and-create">
      <div class="sort">
        <label>Sắp xếp theo:</label>
        <select id="quantity" class="filter-btn">
          <option value="">Số lượng đơn</option>
          <option value="1">Số lượng đơn tăng dần</option>
          <option value="-1">Số lượng đơn giảm dần</option>
        </select>

        <select id="totalCost" class="filter-btn">
          <option value="">Tổng chi phí</option>
          <option value="1">Tổng chi phí tăng dần</option>
          <option value="-1">Tổng chi phí giảm dần</option>
        </select>
      </div>

      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>

      <a href="/admin/all-suppliers/supplier/create" class="create-btn" id="create-btn">
        <i class="fi fi-rr-plus"></i>
        <p>Thêm Nhà Cung Cấp</p>
      </a>
    </div>
    <input type="text" id="search-input" placeholder="Tìm kiếm nhà cung cấp">
  </div>

  <div class="table">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT           </td>
          <td style="width: 15%">Mã Đối Tác    </td>
          <td style="width: 20%">Tên Đối Tác   </td>
          <td style="width: 20%">Địa chỉ       </td>
          <td style="width: 10%">Tổng đơn nhập </td>
          <td style="width: 20%">Tổng Chi phí  </td>
          <td style="width: 10%">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each suppliers}}
          <tr>
            <td>{{addIndex @index 1}}</td>
            <td>{{this._id}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.quantity}}</td>
            <td>{{formatNumber this.totalCost}}</td>
            <td><a href="/admin/all-suppliers/supplier/{{this._id}}">Xem</a></td>
          </tr>
          {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script>
  const successful = '{{successful}}'
  const totalSupplier = '{{totalSupplier}}'
  const currentPage = '{{currentPage}}'
  loadFile('/js/admin/all/supplier.js')
</script>