<div class="admin-all-customers-container">  
  <div class="board-title">
    <p>Tổng Khách Hàng: {{totalCustomer}}</p>
  </div>

  <div class="filter-and-create">
    <div class="sort">
      <label for="quantity">Sắp xếp theo:</label>
      <select id="quantity" class="filter-btn">
        <option value="">Đơn hàng</option>
        <option value="1">Đơn hàng tăng dần</option>
        <option value="-1">Đơn hàng giảm dần</option>
      </select>

      <select id="revenue" class="filter-btn">
        <option value="">Doanh thu</option>
        <option value="1">Doanh thu tăng dần</option>
        <option value="-1">Doanh thu giảm dần</option>
      </select>

      <button id="clear-filter" style="display: none">Xoá bộ lọc</button>
    </div>

    <a href="/admin/all-customers/customer/create" class="create-btn" id="create-btn">
      <i class="fi fi-rr-plus"></i>
      <p>Thêm Khách Hàng</p>
    </a>
  </div>  

  <div class="table">
    <input type="text" id="search-input" placeholder="Tìm kiếm khách hàng">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width: 5% ;">STT           </td>
          <td style="width: 15%;">Mã Khách hàng </td>
          <td style="width: 15%;">Tên Khách Hàng</td>
          <td style="width: 25%;">Địa chỉ       </td>
          <td style="width: 10%;">Tổng Đơn hàng </td>
          <td style="width: 20%;">Tổng doanh thu</td>
          <td style="width: 10%;">Chi tiết      </td>
        </tr>
      </thead>

      <tbody>
        {{#each customers}}
          <tr>
            <td>{{addIndex @index 1}}</td>
            <td>{{this._id}}</td>
            <td>{{this.userInfo.name}}</td>
            <td>{{this.userInfo.address}}</td>
            <td>{{this.quantity}}</td>
            <td>{{formatNumber this.revenue}}</td>
            <td><a href="/admin/all-customers/customer/{{this._id}}">Xem</a></td>
          </tr>
          {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script>
  const successful = '{{successful}}'
  const totalCustomer = '{{totalCustomer}}'
  const currentPage = '{{currentPage}}'
  loadFile('/js/admin/all/customer.js')
</script>