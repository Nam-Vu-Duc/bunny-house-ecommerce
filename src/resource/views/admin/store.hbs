<div class="store-details-container">
  <form method="POST" action="/admin/order-updated/{{order._id}}?_method=PUT">
    <table id="table-1">
      <thead>
        <tr>
          <td colspan="2"> THÔNG TIN CỬA HÀNG </td>
        </tr>
      </thead>
      <tr>
        <td> ID Cửa hàng </td>
        <td> {{storeInfo._id}} </td>
      </tr>
      <tr>
        <td> Tên cửa hàng </td>
        <td> {{storeInfo.name}} </td>
      </tr>
      <tr>
        <td> Địa chỉ cửa hàng </td>
        <td> {{storeInfo.address}} </td>
      </tr>
      <tr>
        <td> Mô tả chi tiết </td>
        <td> {{storeInfo.details}} </td>
      </tr>
      <tr>
        <td> Doanh thu cửa hàng </td>
        <td class="revenue"> {{storeInfo.revenue}} </td>
      </tr>
      <tr>
        <td> Danh sách nhân viên </td>
        <td>
          <ul>
            {{#each employeesInfo}}
            <li> {{this.userInfo.name}} </li>
            {{/each}}
          </ul>
        </td>
      </tr>
    </table>
    <button type="submit">Cập nhật</button>    
  </form>     
</div>

<script>
  revenue = document.querySelector('td.revenue')
  revenue.innerText = revenue.innerText.replace(/\B(?=(\d{3})+(?!\d))/g, '.') + ' VND'
</script>