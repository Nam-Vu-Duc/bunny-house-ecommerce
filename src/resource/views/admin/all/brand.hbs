<div class="admin-all-brands-container">  
  <div class="board-title">
    <p>Tổng Thương hiệu: {{totalBrand}}</p>
  </div>

  <div class="filter-and-create">
    <select class="filter">
      <option value="">Toàn bộ</option>
      <option value=""></option>
      <option value=""></option>
    </select>

    <a href="/admin/all-brands/brand/create" class="create-btn" id="create-btn">
      <i class="fi fi-br-layer-plus"></i>
      <p>Thêm thương hiệu</p>
    </a>
  </div>

  <div class="table">
    <table class="all-items">
      <thead>
        <tr>
          <td style="width:  5%">STT            </td>
          <td style="width: 20%">Mã Thương hiệu </td>
          <td style="width: 15%">Tên Thương Hiệu</td>
          <td style="width: 15%">Tổng Sản Phẩm  </td>
          <td style="width: 15%">Tổng Lượng Bán </td>
          <td style="width: 20%">Tổng Doanh Thu </td>
          <td style="width: 10%">Chi tiết       </td>
        </tr>
      </thead>

      <tbody>
        {{#each brands}}
          <tr>
            <td>{{addIndex @index 1}}</td>
            <td>{{this._id}}</td>
            <td style="display: flex; justify-content: start;align-items: center;gap: 5px">
              <img src="{{this.img.path}}" alt="{{this.name}}" loading="lazy" loading="lazy"> 
              <p>{{this.name}}</p>
            </td> 
            <td>{{this.totalProduct}}</td>
            <td>{{this.totalProduct}}</td>
            <td>{{formatNumber this.totalRevenue}}</td>
            <td><a href="/admin/all-brands/brand/{{this._id}}">Xem</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <span class="pagination"></span>
</div>

<script src="/js/admin/all/brand.js" defer></script>