<div class="detail-product-container">
  <div class="table">
    <div class="image-box">
      <div class="image">
        <img src="{{productInfo.img.path}}" alt="{{productInfo.name}}" loading="lazy"/>
      </div>
    </div>
    
    <div class="details-box">
      <div class="product-title">
        <p id="product-rate">
          <span id="rate-score">{{formatRate productInfo.rate}}</span>/5
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
          <i class="fi fi-ss-star"></i>
        </p>
        <h3>{{productInfo.brand}}</h3>
        <h1>{{productInfo.name}}</h1>
        <del><h4 id="product-old-price">{{formatNumber productInfo.oldPrice}}</h4></del>
        <h3 id="product-price">{{formatNumber productInfo.price}}</h3>
        <h4 id="product-quantity">Số lượng: {{productInfo.quantity}}</h4>
        <h5 id="sale-number">Đã bán: {{productInfo.saleNumber}}</h5>
      </div>
      
      <div class="description">
        <p>{{productInfo.description}}</p>
      </div>

      <div class="quantity">
        <i class="fi fi-rr-minus-circle"></i>
        <p></p>
        <i class="fi fi-rr-add"></i>
      </div>

      <div class="button">
        <div class="add-to-cart"><p>Thêm Vào Giỏ</p></div>
        <div class="buy-now"><a href="/all-orders"><p>Mua Ngay</p></a></div>
        <div class="out-of-order"><p>Hết Hàng</p></div>
      </div>
    </div>
  </div>

  <div class="more-details">
    <h3>THÔNG TIN SẢN PHẨM</h3>
    <p>{{productInfo.details}}</p>
  </div>
  
  <div class="more-details">
    <h3>HƯỚNG DẪN SỬ DỤNG</h3>
    <p>{{productInfo.guide}}</p>
  </div>

  <div class="more-details">
    <h3>ĐÁNH GIÁ SẢN PHẨM</h3>
    <div class="rating-box">
      <div class="rating-score">
        <i class="fi fi-ss-star"></i><h1>{{formatRate productInfo.rate}}</h1>
      </div>
      <div class="rating-detail-score">
        <div>1<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> đánh giá</div>
        <div>2<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> đánh giá</div>
        <div>3<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> đánh giá</div>
        <div>4<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> đánh giá</div>
        <div>5<i class="fi fi-ss-star"></i><span id="rating-border"><span id="rating-progress"></span></span><span id="rating-percent">0</span>% | <span id="rating-num">0</span> đánh giá</div>
      </div>
    </div>
  </div>
  
  <div class="more-details">
    <h3>BÌNH LUẬN SẢN PHẨM</h3>
    <div class="comment-box">
      {{#each comments}}
        <div class="comment">
          <p id="sender">user{{this.senderId}}</p>
          <p id="rate">{{this.rate}}</p>
          <p id="send-date">{{formatDate this.createdAt}}</p>
          <p id="comment">{{this.comment}}</p>
        </div>
      {{/each}}
    </div>
  </div>

  <div class="related-products">
    <div class="title">
      <a href="/all-products/{{productInfo.categories}}/{{productType}}" class="main-title"><b>SẢN PHẨM TƯƠNG ỨNG</b></a>
    </div>

    <div class="products">
    {{#each relatedProducts}}
      {{> product}}
    {{/each}}
  </div>
  </div>
</div>

<script>
  var productDetails = `{{productInfo.details}}`
  var productStatus  = `{{productInfo.status}}`
  var productId      = `{{productInfo._id}}`
  var productName    = `{{productInfo.name}}`
  var productPrice   = `{{productInfo.price}}`
  var productImage   = `{{productInfo.img.path}}`
  loadFile('/js/user/detailProduct.js')
</script>
<script src="/js/user/product.js" defer></script>